{
	"extends": "brightspace/polymer-3-config",
	"env": {
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "sort-class-members/sort-class-members": "off"
  },
  "globals": {
    "fastdom": false
  },
  "overrides": [
    {
      "files": ["components/**/lang/*.js"],
      "excludedFiles": "*localiz*",
      "rules": {
        "indent": ["off"],
        "quotes": ["error", "double"]
      }
    }
  ]
}
